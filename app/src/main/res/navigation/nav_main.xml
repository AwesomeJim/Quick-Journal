<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jim.quickjournal.ui.fragments.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_to_AddJournalFragment"
            app:destination="@id/AddJournalFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_nav_to_journalDetailFragment"
            app:destination="@id/journalDetailFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_nav_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/journalDetailFragment"
        android:name="com.jim.quickjournal.ui.fragments.JournalDetailFragment"
        android:label="@string/myJournal"
        tools:layout="@layout/activity_journal_detail">
        <action
            android:id="@+id/action_nav_to_AddJournalFragment"
            app:destination="@id/AddJournalFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.jim.quickjournal.ui.fragments.LoginFragment"
        android:label="Login"
        tools:layout="@layout/activity_login" >
        <action
            android:id="@+id/action_nav_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>

    <fragment
        android:id="@+id/AddJournalFragment"
        android:name="com.jim.quickjournal.ui.fragments.AddJournalFragment"
        android:label="@string/activity_add_journal_title"
        tools:layout="@layout/activity_add_journal"/>
</navigation>